<body>
    <div class="container">
        <h1>Liste des langues :</h1>
        <ul>
            <% if (languages && languages.length> 0) { %>
                <% languages.forEach(language=> { %>
                    <li>
                        <strong>Nom :</strong>
                        <%= language.name %><br>
                            <strong>Famille :</strong>
                            <%= language.famille %>
                    </li>
                    <% }); %>
                        <% } else { %>
                            <li>Aucune langue trouv√©e</li>
                            <% } %>
        </ul>
        <a href="/" class="return-btn">Retour</a>
    </div>
</body>

</html>